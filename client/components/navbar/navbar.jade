
nav#bg-white
  .logo
  ul.pull-right
    li.nav-link
      a.link(ng-href='/') Home
    li.nav-link
      a.link(ng-href='/blog') Blog
    li.nav-link(ng-repeat='item in menu', ng-class='{active: isActive(item.link)}')
      a.link(ng-href='{{item.link}}') {{item.title}}

    li.nav-link(ng-show='isAdmin()', ng-class='{active: isActive("/admin")}')
      a.link(href='/admin') Admin
    li.nav-link(ng-hide='isLoggedIn()', ng-class='{active: isActive("/signup")}')
        a.link(href='/signup') Sign up

    li.nav-link(ng-hide='isLoggedIn()', ng-class='{active: isActive("/login")}')
      a.link(href='/login') Login

    li.nav-link(ng-show='isLoggedIn()')
      p.navbar-text Hello {{ getCurrentUser().name }}

    li.nav-link(ng-show='isLoggedIn()', ng-class='{active: isActive("/settings")}')
      a.link(href='/settings')
        span.glyphicon.glyphicon-cog

    li.nav-link(ng-show='isLoggedIn()', ng-class='{active: isActive("/logout")}')
      a.link(href='', ng-click='logout()') Logout

